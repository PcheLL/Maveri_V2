<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_profile_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/size_25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/include_widget_profile_info"
        app:layout_constraintEnd_toEndOf="@+id/include_widget_profile_info"/>

    <include
        android:id="@+id/include_widget_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/widget_profile_info"
        android:layout_marginTop="@dimen/size_15dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <view
        android:id="@+id/v_dividing_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/colorDividingLine"
        android:layout_marginTop="@dimen/size_35dp"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginRight="@dimen/size_25dp"
        app:layout_constraintTop_toBottomOf="@+id/include_widget_profile_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginLeft="@dimen/size_25dp"
        app:layout_constraintTop_toBottomOf="@+id/v_dividing_line"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/Profile_my_city_meeting"/>

    <TextView
        android:id="@+id/tv_profile_all_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_25dp"
        app:layout_constraintTop_toBottomOf="@+id/v_dividing_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorBlue"
        android:text="@string/Profile_all_meeting"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profile_meeting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginRight="@dimen/size_25dp"
        tools:itemCount="5"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_all_meeting"/>




</androidx.constraintlayout.widget.ConstraintLayout>